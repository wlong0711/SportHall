# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Replace with your MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/sporthall
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/sporthall
MONGODB_URI=mongodb://localhost:27017/sporthall

# JWT Secret (Change this to a random string in production)
# Generate a secure random string for production use
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# CORS Origin
CLIENT_URL=http://localhost:3000
